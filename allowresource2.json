{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EC2IAMCloudServicesExtra",
            "Effect": "Allow",
            "Action": [
                "ec2:StartInstances",
                "ec2:StopInstances",
                "ec2:RunInstances",
                "ec2:AttachVolume",
                "ec2:DetachVolume",
                "ec2:CreateVolume",
                "ec2:CreateSubnet",
                "ec2:CreateVpc",
                "ec2:DeleteVpc",
                "ec2:DeleteRouteTable",
                "ec2:CreateRoute",
                "ec2:AttachInternetGateway",
                "ec2:DeleteInternetGateway",
                "ec2:AssociateVpcCidrBlock",
                "ec2:DisassociateVpcCidrBlock",
                "ec2:AssociateSubnetCidrBlock",
                "ec2:DisassociateSubnetCidrBlock",
                "ec2:ModifyVpcEndpointServicePermissions",
                "ec2:EnableFastSnapshotRestores",
                "ec2:CopySnapshot",
                "ec2:ImportVolume",
                "ec2:ReleaseAddress",
                "ec2:MoveAddressToVpc",
                "ec2:AssociateRouteTable",
                "ec2:DisassociateRouteTable",
                "ec2:AttachApplianceToNatGateway",
                "ec2:DeleteLaunchTemplate",
                "ec2:DeleteLaunchTemplateVersions",
                "ec2:ModifyInstanceEventWindow",
                "ec2:ModifyInstanceEventStartTime",
                "ec2:ModifyInstanceMaintenanceOptions",
                "ec2:UnlockSnapshot",
                "ec2:PauseVolumeIO",
                "ec2:EnableImage",
                "ec2:DeleteLocalGatewayRouteTablePermission",
                "cloudformation:ListStackResources",
                "cloudformation:DescribeStacks",
                "iam:CreateRole",
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy",
                "iam:ListRoles",
                "iam:GetRolePolicy",
                "iam:ListAttachedRolePolicies"
            ],
            "Resource": "*"
        },
        {
            "Sid": "SagemakerGlueRedshift",
            "Effect": "Allow",
            "Action": [
                "sagemaker:List*",
                "sagemaker:Describe*",
                "sagemaker:CreateUserProfile",
                "sagemaker:DeleteDomain",
                "sagemaker:CreateDomain",
                "sagemaker:CreatePresignedDomainUrl",
                "sagemaker:CreateAutoMLJobV2",
                "sagemaker:CreateProcessingJob",
                "sagemaker:CreateTrainingJob",
                "sagemaker:AddTags",
                "sagemaker:CreateTransformJob",
                "sagemaker:CreateEndpoint",
                "sagemaker:DeleteApp",
                "sagemaker:DeleteUserProfile",
                "sagemaker:StopTrainingJob",
                "sagemaker:CreateAutoMLJob",
                "sagemaker:CreateEndpointConfig",
                "sagemaker:CreateCompilationJob",
                "sagemaker:DescribeEndpointConfig",
                "sagemaker:StopTransformJob",
                "sagemaker:StopAutoMLJob",
                "sagemaker:Delete*",
                "bedrock:*",
                "glue:*",
                "redshift:*",
                "redshift-serverless:*",
                "lambda:*",
                "states:*",
                "translate:TranslateText"
            ],
            "Resource": "*"
        },
        {
            "Sid": "DataWranglerFlowAndApp",
            "Effect": "Allow",
            "Action": [
                "sagemaker:CreateApp",
                "sagemaker:DescribeApp",
                "sagemaker:ListApps",
                "sagemaker:DeleteApp"
            ],
            "Resource": "*"
        },
        {
            "Sid": "SageMakerFeatureStoreFullAccess",
            "Effect": "Allow",
            "Action": [
                "sagemaker:CreateFeatureGroup",
                "sagemaker:DescribeFeatureGroup",
                "sagemaker:ListFeatureGroups",
                "sagemaker:UpdateFeatureGroup",
                "sagemaker:DeleteFeatureGroup",
                "sagemaker:PutRecord",
                "sagemaker:GetRecord",
                "sagemaker:BatchGetRecord",
                "sagemaker:DeleteRecord"
            ],
            "Resource": "*"
        },
        {
            "Sid": "KMSForS3AndSageMaker",
            "Effect": "Allow",
            "Action": [
                "kms:Decrypt",
                "kms:GenerateDataKey",
                "kms:DescribeKey"
            ],
            "Resource": "*"
        },
        {
            "Sid": "AllowSQLWorkbenchForRedshift",
            "Effect": "Allow",
            "Action": [
                "sqlworkbench:GetUserInfo",
                "sqlworkbench:GetAccountInfo",
                "sqlworkbench:GetAccountSettings",
                "sqlworkbench:GetUserWorkspaceSettings"
            ],
            "Resource": "*"
        },
        {
            "Sid": "S3BucketcreationAndLifecycle",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:GetBucketCors",
                "s3:GetBucketCORS",
                "s3:CreateBucket",
                "s3:DeleteObject",
                "s3:GetBucketLocation",
                "s3:PutBucketCORS",
                "s3:GetLifecycleConfiguration",
                "s3:PutLifecycleConfiguration"
            ],
            "Resource": "*"
        }
    ]
}
